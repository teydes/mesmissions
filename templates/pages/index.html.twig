{% extends 'base.html.twig' %}

{% block title 'Toutes les missions' %}

{% block body %}
    <div class="container js-filter">
        <h1>Toutes les missions</h1>

        <div class="row">
                <div class="col-md-3 js-filter-form">
                    {% include 'pages/_filter.html.twig' with {form: form} only %}
            </div>
            <div class="col-md-9">
                <div class="grid js-filter-content">
                    {% for mission in missions %}
                        {% include 'pages/_mission.html.twig' with {mission: mission} only %}
                    {% endfor %}
                </div>

                <div class="pagination mt-4 js-filter-pagination">
                    {{ knp_pagination_render(missions) }}
                </div>
            </div>

        </div>

    </div>
{% endblock %}

