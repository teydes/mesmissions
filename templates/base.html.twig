<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}
        <style>
            .grid {
                display: grid;
                grid-template-columns: repeat(3, 1fr);
                grid-gap: 10px;
            }
            .filter {
                display: block;
                position: sticky;
                top: 20px;
            }
        </style>

    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="{{ path("homepage") }}">Mes Missions</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link {% if current_menu is defined and current_menu == 'missions' %}active{% endif %}" href="{{ path("mission.index") }}">Liste</a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                        Associations
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">Ministères</a>
                        <a class="dropdown-item" href="#">Orphelinats</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Oeuvres</a>
                    </div>
                </li>
            </ul>
         <!--   <form class="form-inline my-2 my-lg-0 mr-auto">
                <input class="form-control mr-sm-2" type="search" placeholder="Tapez votre recherche" aria-label="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Valider</button>
            </form> -->

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="{{ path('login') }}" class="nav-link">Connexion</a>
                </li>
            </ul>
            {% if app.user %}
            <ul class="navbar-nav mr-auto">
                <li>
                <a class="nav-link {% if current_menu is defined and current_menu == 'missions' %}active{% endif %}" href="{{ path("admin.mission.index") }}">Liste(admin)</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path("admin.mission.new") }}">Créer une mission</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path("admin.categorie.new") }}">Créer une categorie</a>
                </li>
            </ul>
                <div class="navbar-nav">
                    <div class="navbar-item">
                        <a href="{{ path('logout') }}" class="nav-link">Déconnexion</a>
                    </div>
                </div>
            {% endif %}
        </div>
    </nav>
    <div style="margin-top: 0.5rem">
        {% block body %}{% endblock %}
    </div>

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js"></script>
    </body>
</html>
