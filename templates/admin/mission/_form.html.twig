{{ form_start(form) }}
<div class="row">
    <div class="col-md-8">{{ form_row(form.name) }}</div>
    <div class="col-md-8">{{ form_row(form.description) }}</div>
    <div class="col-md-8">{{ form_row(form.link) }}</div>
    <div class="col-md-8">{{ form_row(form.imageFile) }}</div>
    <div class="col-md-8">{{ form_row(form.categories) }}</div>
</div>
{{ form_widget(form) }}
<button class="btn btn-primary">{{ button|default('Enregistrer les modifications') }}</button>
{{ form_end(form) }}